@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var departments = ViewBag.Departments;
    var roles = ViewBag.Roles;
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h1 class="card-title">Data Table Phòng Ban</h1>
                        <!-- Main content -->
                        <!-- Button to Open the Modal -->
                        <button type="button" class="btn btn-success float-right" data-toggle="modal" data-target="#modal-Add-Account">
                            Thêm
                        </button>
                        <!-- Modal -->
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="tbDepartment" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Phòng Ban</th>
                                    <th>Trạng Thái</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (departments != null)
                                    {
                                        foreach (var deparment in departments)
                                        {
                                            <tr>
                                                <td>@deparment.Id</td>
                                                <td>@deparment.Name</td>
                                                <td>@deparment.Status</td>
                                                <td>
                                                    <button class="btn btn-warning">
                                                        <i class="fa fa-edit" aria-hidden="true"></i>
                                                    </button>
                                                    <button class="btn btn-danger">
                                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        };
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
<!--Modal Add-->
<div class="modal fade" id="modal-Add-Account" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm Account</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form-Add-Account" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="fullName">Full Name</label>
                        <input type="text" id="fullName" name="fullName" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="userName">Username</label>
                        <input type="text" id="userName" name="userName" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="Role">Role</label>
                        <select id="Role" name="Role" class="custom-select">
                            @{
                                if (roles != null)
                                {
                                   foreach(var item in roles)
                                    {
                                       <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="avatar">Profile Picture</label>
                        <input type="file" id="avatar" name="avatar" class="form-control-file" />
                    </div>
                    <div><img id="avatarDisplay" style="height: 100px; width: 100px"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="btnAdd">Register</button>
            </div>
        </div>
    </div>
</div>
<!--End Modal Add-->
<!--Modal Edit-->
<div class="modal fade" id="modal-Edit-Department" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sửa phòng ban</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form-Edit-Department">
                    <div class="form-group">
                        <label for="department-edit-input">Edit Department</label>
                        <input class="form-control" id="department-edit-input" placeholder="Department" name="departmentname">
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="status" id="radioOption1" value="true" checked>
                        <label class="form-check-label" for="radioOption1">
                            Hiển thị
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="status" id="radioOption2" value="false">
                        <label class="form-check-label" for="radioOption2">
                            Ẩn
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" id="btn-Edit-Department">Edit</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!--End Modal Edit-->
<!--Modal Delete-->
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="deleteModal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modal-delete-department-lb"></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <br />
            <h5 style="text-align:center" id="content-modal-delete-department">Bạn có thực sự muốn xóa Phòng này không?</h5>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="modal-btn-department-yes">Yes</button>
                <button type="button" class="btn btn-primary" id="modal-btn-department-no">No</button>
            </div>
        </div>
    </div>
</div>
<!--End Modal Delete-->